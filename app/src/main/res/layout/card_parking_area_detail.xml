<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/agents_list_margin"
        app:cardCornerRadius="@dimen/agents_list_corner_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="@dimen/agents_list_image_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/agents_list_detail_section_margin_bottom"
                android:layout_marginTop="@dimen/agents_list_detail_section_margin_top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/parking_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parking Name"
                    android:textSize="@dimen/agents_list_agent_name_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/area_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area Name"
                    android:textSize="@dimen/agents_list_agent_phone_number_text_size" />

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_bike_black"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#fff"/>

                        <TextView
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:id="@+id/bike_fare_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_car_black"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#fff"/>

                        <TextView
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:id="@+id/car_fare_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="20dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_bus_black"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#fff"/>

                        <TextView
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:id="@+id/bus_fare_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>